# Editor configuration, see http://editorconfig.org

root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 4

[{node_modules/**.js,*.json}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
